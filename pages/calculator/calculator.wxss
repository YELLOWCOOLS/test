/* pages/calculator/calculator.wxss */
.content {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #ccc;
  font-family: "Microsoft YaHei";
  overflow-x: hidden;
}

.xianshi {
  text-align: right;
  width: 100%;
  line-height: 260rpx;
  padding: 0 10rpx;
  font-weight: bold;
  font-size: 60px;
  box-sizing: border-box;
  border-top: 1px solid #fff;
}
.anniu {
  display: flex;
  flex-direction: row;
  flex: 1;
  width: 100%;
  height: 5rem;
  background-color: #fff;
}
.item {
  width:25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  margin-top: 1px;
  margin-right: 1px;
}
.item:active {
  background-color: #ff0000;
}

.orange {
  color: #fef4e9;
  background: #f78d1d;
  font-weight: bold;
}
.blue {
  color:#d9eef7;
  background-color: #0095cd;
}
